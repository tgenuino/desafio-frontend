header
    display flex
    flex-direction column
    .app-name 
        color white
        font-weight bold
        letter-spacing 2px
        padding 32px
        font-size 2.7rem
        line-height 3.5rem

    .input-section
        margin-top 30px   
        .form-group
            display flex
            flex-direction row
            .search-input
                border-radius 0px
                border 1px solid #d86c00 
                display block    
                padding-right 2.375rem
                width 100%
                height 50px

            .form-control-feedback
                position absolute
                right 0
                margin-right 35px
                float right
                z-index 2
                display inline-block
                font-size 1.5rem
                line-height 3rem
                text-align center
                pointer-events none
                color #505050
                justify-self: end;
    .ul
        width 358px
        position relative
        margin-top 0px
        margin-bottom 60px
        background-color white
        opacity 0.8
        color #000
        display none
        padding 0px
        list-style none
        border 1px solid #d86c00 
        li
            cursor pointer
            margin-top 10px
            margin-left 10px
            margin-bottom 10px
            &:hover
                font-weight bold               
@media (min-width: 576px)
    header
        display flex
        flex-direction column
        justify-content  center
        align-items center
        .app-name
            margin-top 70px
            font-size 3rem
            br
                display none
        .input-section
            width 31.25rem  
            margin-bottom 0px !important
            height 50px  
            .form-group
                display inline
                .search-input
                    border-radius 0px
                    border 1px solid #d86c00 
                    display block    
                    padding-right 2.375rem
                    width 100%
                    height 50px
                .form-control-feedback
                    bottom 50px
                    right 15px
                    margin-right 0px !important
                    display inline !important
                    position relative !important
                
        .ul
            width 498px
            margin-top 0px !important
            margin-bottom 60px
            background-color white
            opacity 0.8
            color #000
            display none
            list-style none
            li
                cursor pointer
                margin-top 10px
                margin-bottom 10px
                &:hover
                    font-weight bold      
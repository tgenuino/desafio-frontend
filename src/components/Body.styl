.body-container
    width auto
    padding-left 20px 
    padding-top 20px
    .list-container
        width auto
        display flex
        flex-direction column  
        justify-content center
        align-items flex-start
        .list-section
            width 250px
            .list-label
                margin-top 20px
                span 
                    font-size 0.8rem
                    margin-left 10px
                    opacity 0.7
            .list-ul
                margin-top 10px
                padding 0px
                display flex
                width 300px
                flex-direction: column;

            .list-item
                display flex
                width 300px
                margin-top 20px
                list-style none
                span
                    margin-left 10px
                    font-weight bold
                    letter-spacing 1px
            
                 

@media (min-width: 576px)
    .body-container
        width 500px
        padding-left 20px 
        padding-top 20px
        .list-container
            width 500px
            display flex
            flex-direction row !important  
            justify-content center
            align-items center
            .list-section
                width 250px
                height 500px    
                .list-label
                    margin-top 20px
                    span 
                        font-size 0.8rem
                        margin-left 10px
                        opacity 0.7
                .list-ul
                    margin-top 10px
                    padding 0px
                    display flex
                    width 300px
                    flex-direction: column;

                .list-item
                    display flex
                    width 300px
                    margin-top 20px
                    list-style none
                    span
                        margin-left 10px
                        font-weight bold
                        letter-spacing 1px


            